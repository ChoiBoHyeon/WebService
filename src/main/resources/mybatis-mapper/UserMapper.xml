<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.webservice.mapper.UserMapper">

    <insert id="createUser" parameterType="com.example.webservice.dto.UserDto">
        INSERT INTO user (id,
                          password,
                          email,
                          name,
                          nick_name,
                          login_key,
                          birth_date
        )
        values (#{id},
                #{password},
                #{email},
                #{name},
                #{nickName},
                #{loginKey},
                #{birthDate}
               )

    </insert>

    <update id="create">
        update user
        set login_key = 0
        where id = #{id}
    </update>

    <select id="findId" resultType="com.example.webservice.dto.UserDto">
        select *
        from user
        where id = #{id}
    </select>

    <select id="findName" resultType="com.example.webservice.dto.UserDto">
        select *
        from user
        where name = #{name}
    </select>

    <select id="findEmail" resultType="com.example.webservice.dto.UserDto">
        select *
        from user
        where email = #{email}
    </select>

    <update id="conform">
        update user
        set login_key = 1
        where email = #{email}
    </update>

    <update id="change">
        update user
        set nick_name = #{nickName},
            phone_number = #{phoneNumber},
            name  = #{name},
            email = #{email}
        where id  = #{id}
    </update>
</mapper>